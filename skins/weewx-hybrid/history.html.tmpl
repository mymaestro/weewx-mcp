#set $title = "WeeWX Hybrid History"
<!DOCTYPE html>
<html lang="en" data-api-base="$Extras.api_base">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>$title</title>
  <link rel="stylesheet" href="./css/style.css" />
  <script defer src="./js/main.js"></script>
</head>
<body>
  <header class="site-header">
    <div class="brand">
      <span class="brand-title">WeeWX Hybrid</span>
      <span class="brand-subtitle">$station.location</span>
    </div>
    <nav class="nav">
      <a class="nav-link" href="index.html">Home</a>
      <a class="nav-link active" href="history.html">History</a>
    </nav>
  </header>

  <main class="container">
    <section class="card">
      <div class="card-header">
        <h1>Recent History</h1>
        <div class="updated">Updated: $current.dateTime.format("%Y-%m-%d %H:%M")</div>
      </div>
      <div class="grid metrics">
        <div class="metric">
          <div class="label">Today High</div>
          <div class="value">$day.outTemp.max.format()</div>
        </div>
        <div class="metric">
          <div class="label">Today Low</div>
          <div class="value">$day.outTemp.min.format()</div>
        </div>
        <div class="metric">
          <div class="label">Today Rain</div>
          <div class="value">$day.rain.sum.format()</div>
        </div>
        <div class="metric">
          <div class="label">Month Rain</div>
          <div class="value">$month.rain.sum.format()</div>
        </div>
        <div class="metric">
          <div class="label">Year Rain</div>
          <div class="value">$year.rain.sum.format()</div>
        </div>
        <div class="metric">
          <div class="label">Month Avg Temp</div>
          <div class="value">$month.outTemp.avg.format()</div>
        </div>
      </div>
    </section>

    <section class="card">
      <div class="card-header">
        <h2>Longer-Term Charts</h2>
      </div>
      <div class="grid charts">
        <figure>
          <img src="yeartemp.png" alt="Year Temperature" />
          <figcaption>Yearly Temperature</figcaption>
        </figure>
        <figure>
          <img src="yearrain.png" alt="Year Rain" />
          <figcaption>Yearly Rainfall</figcaption>
        </figure>
      </div>
    </section>
  </main>

  <footer class="site-footer">
    <div>Generated by WeeWX</div>
  </footer>
</body>
</html>
