#set $title = "WeeWX Hybrid Dashboard"
#* Simple, standalone template (no inheritance) *#
<!DOCTYPE html>
<html lang="en" data-api-base="$Extras.api_base">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>$title</title>
  <link rel="stylesheet" href="./css/style.css" />
  <script defer src="./js/main.js"></script>
</head>
<body>
  <header class="site-header">
    <div class="brand">
      <span class="brand-title">WeeWX Hybrid</span>
      <span class="brand-subtitle">$station.location</span>
    </div>
    <nav class="nav">
      <a class="nav-link active" href="index.html">Home</a>
      <a class="nav-link" href="history.html">History</a>
    </nav>
  </header>

  <main class="container">
    <section class="card">
      <div class="card-header">
        <h1>Current Conditions</h1>
        <div class="updated">Updated: $current.dateTime.format("%Y-%m-%d %H:%M")</div>
      </div>
      <div class="grid metrics">
        <div class="metric">
          <div class="label">Temperature</div>
          <div class="value">$current.outTemp.format()</div>
        </div>
        <div class="metric">
          <div class="label">Humidity</div>
          <div class="value">$current.outHumidity.format()</div>
        </div>
        <div class="metric">
          <div class="label">Pressure</div>
          <div class="value">$current.barometer.format()</div>
        </div>
        <div class="metric">
          <div class="label">Wind</div>
          <div class="value">$current.windSpeed.format() $current.windDir.format()</div>
        </div>
        <div class="metric">
          <div class="label">Rain Rate</div>
          <div class="value">$current.rainRate.format()</div>
        </div>
        <div class="metric">
          <div class="label">Dew Point</div>
          <div class="value">$current.dewpoint.format()</div>
        </div>
      </div>
    </section>

    <section class="card">
      <div class="card-header">
        <h2>Charts</h2>
        <div class="sub">Pre-generated by WeeWX</div>
      </div>
      <div class="grid charts">
        <figure>
          <img src="dayoutTemp.png" alt="Daily Temperature" />
          <figcaption>Daily Temperature</figcaption>
        </figure>
        <figure>
          <img src="dayrain.png" alt="Daily Rain" />
          <figcaption>Daily Rain</figcaption>
        </figure>
        <figure>
          <img src="monthoutTemp.png" alt="Monthly Temperature" />
          <figcaption>Monthly Temperature</figcaption>
        </figure>
        <figure>
          <img src="monthrain.png" alt="Monthly Rain" />
          <figcaption>Monthly Rain</figcaption>
        </figure>
      </div>
    </section>
  </main>

  <footer class="site-footer">
    <div>Generated by WeeWX</div>
  </footer>
</body>
</html>
